<%= form_with(url: search_buses_path, method: :get, html: {id: "search-route", remote: true}) do |form| %>
  <%= form.label :source, "From" %>
  <%= form.text_field :source, class: "col" %>
  <%= form.label :destination, "To" %>
  <%= form.text_field :destination, class: "col" %>
  <%= form.submit "Search", class: "btn btn-primary" %>
<% end %>

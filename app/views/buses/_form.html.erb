<%= form_with(model: bus) do |form| %>
  <%= form.label :source %>
  <%= form.text_field :source %>
  <%= form.label :destination %>
  <%= form.text_field :destination %>
  <%= form.label :bus_number %>
  <%= form.text_field :bus_number %>
  <%= form.label :depart_time, "Time" %>
  <%= form.time_field :depart_time %>
  <%= form.label :capacity %>
  <%= form.number_field :capacity %>
  <%= form.submit  %>
<% end %>
<br>

<header>
  <nav>
    <h1><%= link_to "Bus Booking", buses_path %></h1>
    <ul class = "left">
    </ul>
    <ul class = "right">
      <% if current_user %>
        <li>
        <%= link_to current_user.name.split[0], current_user %>
        </li>
        <li>
          <%= button_to "Sign Out", destroy_user_session_path, method: :delete %>
        </li>
      <% else %>
        <li>
          <%= link_to "Sign In", new_user_session_path, class: "button" %>
        </li>
        <li>
          <%= link_to "Sign Up", new_user_registration_path, class: "button" %>
        </li>
      <% end %>
    </ul>
  </nav>
</header>

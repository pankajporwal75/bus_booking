<%# <div class = "container mt-5"> %>
	<div class = "row justify-content-center text-center">
		<div class = "col-md-6">
			<%# <div class = "card"> %>
				<div class = "card-body">
					<%= form_with(url: :new_bus_reservation, method: :get) do |f| %>
						<h5 class = "card-title">
							<%= f.label :date, "Please select Date", class: "date_label text-decoration-underline", for: "choose" %>
						</h5>
						<div id = "datepicker" class = "input-group date col-md-6 " data-date-format = "mm-dd-yyyy">
								<% if @bus.departed? %>
								<%= f.date_field :date, min: Date.tomorrow, value: @date, class: "datepicker form-control m-2 text-center", id: "choose" %>
								<% else %>
								<%= f.date_field :date, min: Date.today, value: @date, class: "datepicker form-control m-2 text-center", id: "choose" %>
								<% end %>
						</div>
						<%= f.hidden_field :bus_id, value: @bus.id %>
						<%= f.submit "Check Availability", class: "btn btn-outline-success mt-2", data: { turbo_frame: "available_seats" } %>
					<% end %>
				</div>
			<%# </div> %>
		</div>
	</div>
<%# </div> %>
<%= turbo_frame_tag "available_seats" do %>
	<% unless @bus.nil? || @reservation.nil? %>
	<div class = "container mt-4 text-center">
		<div class = "row flex justify-content-center m-4 shadow" style  = "border-radius:10px;">
			<div class = "card-header bg-primary p-3" style="--bs-bg-opacity: .2";  text-center text-green py-2 mb-3 xx">
				<h6> Available seats for : <%= @bus.source %> to <%= @bus.destination %> on <%= formatted_date(@date) %>  </h6>
			</div>
			<%= form_with model: [@bus, @reservation] do |f| %> 
				<h5 class = "card-title text-decoration-underline mb-4">Select preferred seats</h5>
				<div class="seat_map">
					<%= f.collection_check_boxes(:seat_id, @all_seats, :id, :seat_no, { include_hidden: false }, class: "seat-checkbox", item_wrapper_class: "form-check", item_label_class: "form-check-label") do |check| %>
          <%= check.check_box(disabled: check.object.reserved?(@date)) %>
          <%= check.label class: "opacity-100"%>
          <% end %>
				</div>
				<%= f.hidden_field :bus_id, value: @bus.id %>
				<%= f.hidden_field :user_id, value: @user.id %>
				<%= f.hidden_field :date, value: date %>
				<%= f.submit "Confirm Booking", class: "btn btn-outline-success", data: { turbo_frame: "_top" } %>
			<% end %>
		</div>
	</div>
	<% end %>
<% end %>

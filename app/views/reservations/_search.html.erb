<%= form_with(url: search_reservations_path, method: :get, html: {id: "search-form", remote: true}) do |form| %>
  <%= form.label :search_date, "Select Date" %>
  <%= form.date_field :search_date, class: "myfield" %>
  <%= form.hidden_field :bus_id, value: @bus.id %>
  <%= form.submit "Search", class: "btn btn-primary" %>
<% end %>
